<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@android:color/white" />

    <!-- Border -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="#00000000" /> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="@color/black" /> <!-- Border width and color -->
        </shape>
    </item>
</layer-list>
