<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reports.ReportsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:elevation="1dp"
        app:titleTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reports"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:textSize="16sp"/>
    </com.google.android.material.appbar.MaterialToolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/RegisterAsset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spType"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:background="@drawable/spinner_bg"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_selectDate"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Select Date"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_select_ppt_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="8dp"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <Spinner
            android:id="@+id/select_ppt_event"
            android:layout_width="match_parent"
            android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
            android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_select_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="8dp"
            android:visibility="visible"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/five_km_turning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mid/Turning Point"
                android:textSize="18sp"
                android:padding="7dp"/>

            <CheckBox
                android:id="@+id/twoPointSevenFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.75 Meter Ditch "
                android:textSize="18sp"
                android:padding="7dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check_vHope"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:text="V-Rope"
                android:textSize="18sp"
                android:padding="7dp"/>

            <CheckBox
                android:id="@+id/check_h_rope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H-Rope"
                android:textSize="18sp"
                android:padding="7dp"/>

        </LinearLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <HorizontalScrollView
                android:id="@+id/hScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@+id/ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                       android:layout_marginBottom="12dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:layout_marginEnd="8dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/hd_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="4dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tv_chest_no"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="Chest No"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_army_number"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="Army No"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="Name"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_gender"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="Gender"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="Age"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_soldier"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="Soldier Type"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_company"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="Company"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_posting"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="Posting"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_rank"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="Rank"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_5km_turning_point"
                                    android:layout_width="120dp"
                                    android:layout_height="52dp"
                                    android:text="Mid/Turning Point"
                                    android:textAlignment="center"
                                    android:background="@drawable/border"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:visibility="visible"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:id="@+id/tv_two_point_five_mtr"
                                    android:layout_width="120dp"
                                    android:layout_height="42dp"
                                    android:text="2.75 Mtr Ditch"
                                    android:gravity="center"
                                    android:background="@drawable/border"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:id="@+id/tv_v_rope"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="@string/v_rope"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_h_rope"
                                    android:layout_width="100dp"
                                    android:layout_height="32dp"
                                    android:text="@string/h_rope"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:background="@drawable/border"
                                    android:textSize="16sp"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        tools:itemCount="4"
                        android:layout_marginBottom="12dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/report_layout" />

                </LinearLayout>

            </HorizontalScrollView>


        </androidx.cardview.widget.CardView>




    </LinearLayout>


    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="true"
        android:indeterminateTint="@color/blue"
        android:progressTint="@color/green2"
        style="?android:attr/progressBarStyle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>